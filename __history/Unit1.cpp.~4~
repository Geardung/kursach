__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	UnicodeString url = Edit1->Text;
	for(int x = 0; x < ValueListEditor1->RowCount; x++)
	{
		if (x == 0) url = url + "?";
		if (! (ValueListEditor1->Cells[0][x] & ValueListEditor1->Cells[1][x])) continue;
		url = url + "&" + ValueListEditor1->Cells[0][x] + "=" + ValueListEditor1->Cells[1][x];
	}

	Memo1->Text= IdHTTP1->Get("http://nkse.geardung.space/api/v1/group/all?token=testing");// Код страницы

}
